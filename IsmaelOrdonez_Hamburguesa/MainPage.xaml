<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:IsmaelOrdonez_Hamburguesa.Models"
             x:Class="IsmaelOrdonez_Hamburguesa.MainPage"
             Title="Hamburguesas">

    <ScrollView>
        <VerticalStackLayout
            Spacing="20"
            Padding="10">

            <CollectionView x:Name="J_List" Grid.Row="4" SelectionMode="Single" SelectionChanged="J_selected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="1" Text="{Binding Name}" HorizontalOptions="Center"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Añadir nuevo registro" Clicked="J_Add" VerticalOptions="End"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
